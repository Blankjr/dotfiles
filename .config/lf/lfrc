# Basic Settings
set hidden true
set ignorecase true
set icons true
set drawbox



# image previewing
set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id


# Custom Functions
cmd open ${{
    case $(file --mime-type "$f" -bL) in
        text/*|application/json) lvim "$f";;
        *) xdg-open "$f" ;;
    esac
}}
