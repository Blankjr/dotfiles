#! /bin/sh

selscreen=$(printf "ğŸ–¥ï¸ main\nğŸ–¥ï¸ left\n" | rofi -dmenu)
chosen=$(printf "ğŸ”†100\nğŸ”†80\nğŸ”†60\nğŸ”…40\nğŸ”…20\n" | rofi -dmenu)

case "$selscreen" in
"ğŸ–¥ï¸ main") screen="DisplayPort-0" ;;
"ğŸ–¥ï¸ left") screen="DisplayPort-1" ;;
*) exit 1 ;;
esac

case "$chosen" in
"ğŸ”†100") xrandr --output "$screen" --brightness 1. ;;
"ğŸ”†80") xrandr --output "$screen" --brightness 0.8 ;;
"ğŸ”†60") xrandr --output "$screen" --brightness 0.6 ;;
"ğŸ”…40") xrandr --output "$screen" --brightness 0.4 ;;
"ğŸ”…20") xrandr --output "$screen" --brightness 0.2 ;;
*) exit 1 ;;
esac
