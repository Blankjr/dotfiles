#! /bin/sh

selscreen=$(printf "ğŸ–¥ï¸ left\nğŸ–¥ï¸ main\n" | rofi -dmenu)
chosen=$(printf "normal\nleft\nright\n" | rofi -dmenu)

case "$selscreen" in
"ğŸ–¥ï¸ main") screen="DisplayPort-0" ;;
"ğŸ–¥ï¸ left") screen="DisplayPort-1" ;;
*) exit 1 ;;
esac

case "$chosen" in
"normal") xrandr --output "$screen" --rotate normal ;;
"left") xrandr --output "$screen" --rotate left ;;
"right") xrandr --output "$screen" --rotate right ;;
*) exit 1 ;;
esac
